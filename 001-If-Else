hora = input('Que horas sao? (0-23) ')
if hora.isdigit():
    hora = int(hora)
    if hora < 0 or hora > 23:
        print('Horario invalido!')
    else:
        if hora <= 11:
            print('Bom dia!')
        elif hora <= 17:
            print('Boa tarde!')
        else:
            print('Boa noite!')
else:
    print('Error.')
